{{#if isEmptySubscribes}}
  <p>No Active Subscribed Scout listings found.</p>
{{else}}
  {{#each listings}}
  {{!-- reffered -> https://handlebarsjs.com/guide/expressions.html#subexpressions --}}
  {{!-- I am doing this because this will help me store my listings as a json object which i can then pass when my open listing button is clicked --}}
     <div class="listing-card" data-listings="{{jsonListings}}">
      <div class="card-content" data-listing-id="{{_id}}">
        <h1 class="listing-name">{{listingName}}</h1>
        <p class="listing-link"><a href="{{listingLink}}" target="_blank">{{listingLink}}</a></p>
        <p class="listing-address"> Street: {{street}}</p>
        <p class="listing-city">City: {{city}}</p>
        <p class="listing-state">State: {{state}}</p>
        <p class="listing-country">Country: {{country}}</p>
        <p class="listing-pincode">Pincode: {{pincode}}</p>
        <p class="listing-rent">Rent: {{rent}}</p>
        <p class="listing-additionalinfo">Additional Info: {{additionalInfo}}</p>
        <p class="listing-agent">Agent Number: {{agentNumber}}</p>
        <p class="listing-owner">Owner Number: {{ownerNumber}}</p>
        <p class="listing-reward">Reward: {{reward}}</p>
        <p class="listing-scoutName">Subscribed Scout Name: {{scoutName}}</p>
        <p class="listing-progress">Progress: {{progressbar}}%</p>
        <progress value="{{progressbar}}" max="100" class="progressBar">
        </progress>
        {{!-- this is so that my event listener can target this class --}}
        <button class="OpenListingButton">Open Listing</button>
      </div>
    </div>
  {{/each}}
{{/if}}


