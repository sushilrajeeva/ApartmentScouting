<style>
  .comments-container {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .comment-card {
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
    width: 60%;
    clear: both;
    overflow: auto;
  }

  .left {
    float: left;
    background-color: #f1f1f1;
  }

  .right {
    float: right;
    background-color: #ddd;
  }

  .timestamp {
    font-size: 0.8em;
    color: #777;
  }
</style>

